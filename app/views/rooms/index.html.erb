<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Time</th>
      <th>Price</th>
      <th>Status</th>
      <th>Requirements</th>
      <th>Description</th>
      <th>Discarded</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.url %></td>
        <td><%= room.time %></td>
        <td><%= room.price %></td>
        <td><%= room.status %></td>
        <td><%= room.requirements %></td>
        <td><%= room.description %></td>
        <td><%= room.discarded %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

