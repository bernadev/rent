= form_for(@room) do |f|
  - if @room.errors.any?
    #error_explanation
      %h2
        = pluralize(@room.errors.count, "error")
        prohibited this room from being saved:
      %ul
        - @room.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .field
    = f.label :time
    %br/
    = f.text_field :time
  .field
    = f.label :price
    %br/
    = f.text_field :price
  .field
    = f.label :status
    %br/
    = f.text_field :status
  .field
    = f.label :requirements
    %br/
    = f.text_field :requirements
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :discarded
    %br/
    = f.check_box :discarded
  .actions
    = f.submit
